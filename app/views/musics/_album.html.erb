<% @tracks.each do |track| %>
  <%= "#{track.position} : #{track.title}" %>
  <% music = Music.find_or_initialize_by(recording_id: track.recording_id) %>
  <% unless music.persisted? %>
    <% music = Music.new(recording_id: track.recording_id,
                                 name: track.title,
                          artist_name: @artist.name,
                           album_name: @album.title) %>
  <% end %>
  <%= render 'ownerships/copy_button', music: music %>
  <%= render 'ownerships/want_button', music: music %>
<%# if current_user.copy?(track_info) %>
    <%#= submit_tag 'コピーリストから削除する', class: 'btn btn-danger' %>
  <%# else %>
    <%#= link_to "コピーリストに登録する", ownerships_path(music_id: "#{Music.count} + 1",
                                                          recording_id: track.recording_id,
                                                          artist_id: @artist.id,
                                                          album_id: @album.id,
                                                          name: track.title,
                                                          type: "Copy"),
                                          class: 'btn btn-success',
                                          method: 'post' %>
<% end %>