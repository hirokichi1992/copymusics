<div class="row">
  <aside class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %>（<%= @user.age %>）</h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
      <div class="panel-heading">
        <h3 class="panel-title">パート : <%= @user.part %></h3>
        <br>
        <h3 class="panel-title">コピー曲数 : <%= @user.copy_musics.count %></h3>
      </div>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
  </aside>
  <div class="col-xs-12">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(copys_user_path(@user)) %>"><%= link_to copys_user_path(@user) do %>コピーした曲 <span class="badge"><%= @count_copys %></span><% end %></li>
      <li class="<%= 'active' if current_page?(wants_user_path(@user)) %>"><%= link_to wants_user_path(@user) do %>コピーしたい曲 <span class="badge"><%= @count_wants %></span><% end %></li>
      <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>フォロー <span class="badge"><%= @count_followings %></span><% end %></li>
      <li class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>フォロワー <span class="badge"><%= @count_followers %></span><% end %></li>
    </ul>
  </div>
</div>