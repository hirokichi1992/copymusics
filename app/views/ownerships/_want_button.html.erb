<% if !current_user.copy?(music) %>
  <% if current_user.want?(music) %>
    <%= form_tag(ownership_path(music.id), method: :delete) do %>
      <%= hidden_field_tag :music_id, music.id %>
      <%= hidden_field_tag :type, 'Want' %>
      <%= submit_tag 'コピーしたいリストから削除する', class: 'btn btn-success' %>
    <% end %>
  <% else %>
    <%= form_tag(ownerships_path) do %>
      <%= hidden_field_tag :music_id, music.id %>
      <%= hidden_field_tag :type, 'Want' %>
      <%= submit_tag 'コピーしたいリストへ登録する', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>
